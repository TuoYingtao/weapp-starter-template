.image {
	width: 20px;
	height: 20px;
}

.middle-image {
	width: 42px;
	height: 42px;
}

.middle-wrapper {
	position: relative;
	z-index: 1;
	width: 48px;
	height: 48px;
	padding: 3px;
	transform: translateY(-18px);
	text-align: center;
	border-top: 1px solid #f2f2f3;
	border-radius: 50%;
	background-color: #fff;
}

.text {
	font-size: 10px;
	margin-top: 2px;
}

.middle-text {
	margin-top: 3px;
	text-align: center;
}
